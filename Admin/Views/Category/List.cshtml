@{
  ViewBag.Title = "List Categories";

}

@model IEnumerable<App.Data.Entities.CategoryEntity>;

	<h1 class="text-center my-5">Kategori Listesi</h1>

	@if(Model.Any())
{
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>İşlemler</th>
				<th>Kategori ID</th>
				<th>Kategori Adı</th>
				<th>Kategori Tanımı</th>
				<th>Kategori Rengi</th>
				<th>Kategori İkonu</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						<a class="btn btn-danger btn-sm my-1 delete-btn" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Kategoriyi Sil</a>
						<a class="btn btn-warning btn-sm my-1" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">Kategoriyi Güncelle</a>
					</td>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>@item.Tanim</td>
					<td>@item.Color</td>
					<td>@item.IconCssClass</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="text-center mt-5 my-5">
		<h4>Gösterilecek Kategori Yok</h4>
	</div>
}


	<div class="row">
		<div class="col-3"></div>
		<div class="col-6">
			<a class="btn btn-success mt-3 modal-dialog-centered justify-content-center" asp-controller="Category" asp-action="Create">Kategori Oluştur</a>
		<a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3 modal-dialog-centered justify-content-center">Anasayfa</a>
		</div>
	</div>
	





@section Scripts {
	<script>
		document.addEventListener('DOMContentLoaded', function () {
			var deleteButtons = document.querySelectorAll('.delete-btn');

			deleteButtons.forEach(function (button) {
				button.addEventListener('click', function (event) {

					var result = confirm('Bu kategoriyi silmek istediğinize emin misiniz?');
					if (!result) {
						event.preventDefault();
					}
				});
			});
		});
	</script>
}
